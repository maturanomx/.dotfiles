#!/usr/bin/env bash

link() {
	rm -rf "${2}"
	ln -sv "${1}" "${2}"
}


SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" &> /dev/null && pwd)

source ${SCRIPT_DIR}/variables
source ${SCRIPT_DIR}/software_mac

mkdir -p ${HOME}/.private

# GIT
touch ${HOME}/.private/gitconfig
link ${DOTFILES}/git/gitconfig ${HOME}/.gitconfig

# ZSH
link ${DOTFILES}/variables ${HOME}/.zshenv
link ${DOTFILES}/zsh/zshrc ${HOME}/.zshrc
link ${DOTFILES}/zsh/zimrc ${HOME}/.zimrc

# Kitty
link ${DOTFILES}/kitty ${HOME}/.config/kitty

# bat
link ${DOTFILES}/bat ${HOME}/.config/bat
bat cache --build


# vim: noet ci pi sts=0 sw=4 ts=4
