[include]
	path = ~/.private/gitconfig

[alias]
	co = checkout
	lg = log --graph --abbrev-commit --pretty=format:'%C(yellow)%h%Creset%Cred%d%Creset %Cgreen(%ai)%Creset %C(bold blue)%an%Creset%n%Creset%B' --stat

[branch]
	sort = -committerdate

[color]
	ui = true

[column]
	ui = auto

[commit]
	verbose = true

[core]
	excludesfile = ~/.dotfiles/git/gitignore

[credential]
	helper = cache --timeout=3600

[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true

[fetch]
	all = true
	prune = true
	pruneTags = true

[help]
	autocorrect = prompt

[init]
	defaultBranch = main

[merge]
	conflictstyle = zdiff3

[pull]
	rebase = true

[push]
	autoSetupRemote = true
	default = simple
	followTags = true

[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true

[rerere]
	enabled = true
	autoupdate = true

[tag]
	sort = version:refname


