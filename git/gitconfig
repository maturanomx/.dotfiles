[core]
	editor = vim
	excludesfile = ~/.dotfiles/git/gitignore
	pager = delta

[color]
	ui = true

[push]
	default = current

[alias]
	co = checkout
	lg = log --graph --abbrev-commit --pretty=format:'%C(yellow)%h%Creset%Cred%d%Creset %Cgreen(%ai)%Creset %C(bold blue)%an%Creset%n%Creset%B' --stat

[credential]
	helper = cache --timeout=3600

[fetch]
	prune = true

[pull]
	rebase = true

[interactive]
	diffFiter = delta --color only

[add.interactive]
	useBuiltin = false

[delta]
	navigate = true
	light = false

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[include]
	path = ~/.private/gitconfig
